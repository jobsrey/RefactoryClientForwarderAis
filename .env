# ============================================
# KONFIGURASI DOCKER ENVIRONMENT
# ============================================
# Copy file ini ke .env dan sesuaikan nilainya
# sebelum menjalankan docker-compose up

# ============================================
# KONFIGURASI MODE KONEKSI
# ============================================
# Mode koneksi: 'serial', 'tcp', atau 'udp'
CONNECTION_MODE=tcp

# ============================================
# KONFIGURASI SERIAL PORT (untuk mode serial)
# ============================================
# Di Linux/Docker biasanya /dev/ttyUSB0 atau /dev/ttyACM0
SERIAL_PORT=/dev/ttyUSB0
SERIAL_BAUD_RATE=38400
SERIAL_DATA_BITS=8
SERIAL_STOP_BITS=1
SERIAL_PARITY=none

# ============================================
# KONFIGURASI TCP/IP (untuk mode tcp)
# ============================================
TCP_HOST=192.168.1.100
TCP_PORT=10110

# ============================================
# KONFIGURASI UDP (untuk mode udp)
# ============================================
UDP_HOST=192.168.1.100
UDP_PORT=10110
UDP_LISTEN_PORT=10110

# ============================================
# KONFIGURASI WEBSOCKET SERVER
# ============================================
WEBSOCKET_SERVER=ws://socket-ais.jasalog.com:8081
DEBOUNCE_DELAY=100

# ============================================
# KONFIGURASI TCP FORWARDER (UNTUK OPENCPN)
# ============================================
# FORWARDER_ENABLED: true = aktif, false = nonaktif
# FORWARDER_HOST: HARUS 0.0.0.0 untuk listen di semua interface lokal
# JANGAN gunakan IP publik/remote (akan error EADDRNOTAVAIL)
FORWARDER_ENABLED=false
FORWARDER_HOST=0.0.0.0
FORWARDER_PORT=10111

# ============================================
# KONFIGURASI TCP SENDER (FORWARD KE REMOTE SERVER)
# ============================================
# TCP Sender adalah CLIENT yang mengirim data AIS ke server remote
# Berbeda dengan Forwarder yang menerima koneksi
SENDER_ENABLED=true
SENDER_HOST=194.233.93.64
SENDER_PORT=13000
SENDER_RECONNECT_DELAY=100

# ============================================
# KONFIGURASI IDENTIFIKASI DEVICE & USER
# ============================================
# Ganti dengan APP_KEY dan USER_KEY yang valid
APP_KEY=your_app_key_here
USER_KEY=your_user_key_here
